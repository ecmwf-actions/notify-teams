{
  "name": "notify-teams",
  "version": "1.2.0",
  "description": "A Github action that notifies about workflow status via Microsoft Teams.",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts --minify --license licenses.txt",
    "stage-build": "git add dist/*",
    "test": "jest --ci --coverage",
    "lint": "eslint --ext .ts,.yml --fix action.yml .github src tests",
    "lint-no-fix": "npm run lint -- --no-fix",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "git": {
    "pre-commit": [
      "lint-no-fix",
      "build",
      "stage-build"
    ]
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmwf-actions/notify-teams"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/http-client": "^2.1.0",
    "@octokit/core": "^4.2.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-typescript": "^7.21.5",
    "@types/adm-zip": "^0.5.0",
    "@types/jest": "^29.5.1",
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^18.16.3",
    "@types/tar": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vercel/git-hooks": "^1.0.0",
    "@vercel/ncc": "^0.36.1",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.41.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-json-schema-validator": "^4.4.0",
    "eslint-plugin-jsonc": "^2.7.0",
    "eslint-plugin-yaml": "^0.5.0",
    "jest": "^29.5.0",
    "typescript": "^5.0.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!<rootDir>/node_modules/"
    ],
    "restoreMocks": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "plugins": [
      "@typescript-eslint",
      "jest",
      "yaml"
    ],
    "overrides": [{
        "files": [
          "*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "project": "./tsconfig.json",
          "sourceType": "module"
        },
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "plugin:json-schema-validator/recommended"
        ]
      },
      {
        "files": [
          "*.yml",
          "*.yaml"
        ],
        "extends": [
          "plugin:yaml/recommended"
        ]
      }
    ],
    "rules": {
      "indent": [
        "error",
        4
      ],
      "json-schema-validator/no-invalid": [
        "error",
        {
          "useSchemastoreCatalog": true
        }
      ]
    }
  },
  "auto-changelog": {
    "hideCredit": true,
    "package": true,
    "template": "keepachangelog"
  }
}
