{
  "name": "notify-teams",
  "version": "1.0.0",
  "description": "A Github action that notifies about workflow status via Microsoft Teams.",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "scripts/postinstall.sh",
    "build": "npx @vercel/ncc build src/index.js --minify --license licenses.txt --no-cache",
    "test": "jest --ci --coverage",
    "lint": "eslint --ext .js,.yml --fix action.yml .github src tests",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmwf-actions/notify-teams"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/http-client": "^1.0.11",
    "@octokit/core": "^3.5.1"
  },
  "devDependencies": {
    "auto-changelog": "^2.3.0",
    "eslint": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-json-schema-validator": "^2.1.9",
    "eslint-plugin-jsonc": "^2.0.0",
    "jest": "^27.0.6"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/all",
      "plugin:json-schema-validator/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "json-schema-validator/no-invalid": [
        "error",
        {
          "useSchemastoreCatalog": true
        }
      ]
    }
  },
  "auto-changelog": {
    "hideCredit": true,
    "package": true,
    "template": "keepachangelog"
  }
}
